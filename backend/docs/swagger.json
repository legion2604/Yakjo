{
    "swagger": "2.0",
    "info": {
        "description": "API документация проекта Yakjo сервиса для поиска попутчиков.",
        "title": "Yakjo Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/auth/logout": {
            "post": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Удаляет JWT токен из Cookie (устанавливает Max-Age: -1).",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Выход из системы",
                "responses": {
                    "200": {
                        "description": "userInfo: nil",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        },
                        "headers": {
                            "Set-Cookie": {
                                "type": "string",
                                "description": "access_token=; Max-Age=0"
                            }
                        }
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Извлекает ID пользователя из JWT токена, находящегося в httpOnly Cookie, и возвращает информацию о профиле.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Получить данные текущего пользователя",
                "responses": {
                    "200": {
                        "description": "Данные профиля пользователя",
                        "schema": {
                            "$ref": "#/definitions/backend_internal_model.GetUserInfo"
                        }
                    },
                    "401": {
                        "description": "error: Unauthorized (токен отсутствует или невалиден)",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "error: Internal Server Error (ошибка БД или сервиса)",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Сохраняет дополнительные данные нового пользователя и выдает JWT токен в Cookie",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Завершение регистрации пользователя",
                "parameters": [
                    {
                        "description": "Данные для регистрации (имя, фамилия и т.д.)",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/backend_internal_model.RegisterUser"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "userInfo: данные пользователя",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/definitions/backend_internal_model.RegisterUser"
                            }
                        },
                        "headers": {
                            "Set-Cookie": {
                                "type": "string",
                                "description": "access_token=...; HttpOnly"
                            }
                        }
                    },
                    "400": {
                        "description": "error: ошибка валидации JSON",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "error: внутренняя ошибка сервера",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/send-otp": {
            "post": {
                "description": "Принимает номер телефона и отправляет на него одноразовый пароль (OTP)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Отправка OTP кода",
                "parameters": [
                    {
                        "description": "Данные телефона",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/backend_internal_model.PhoneRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "massage: Код отправлен",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "error: текст ошибки",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/verify-otp": {
            "post": {
                "description": "Проверяет код из SMS. Если пользователь существует, устанавливает JWT в Cookie.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Верификация OTP кода",
                "parameters": [
                    {
                        "description": "Код верификации и телефон",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/backend_internal_model.VerifyOtp"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Данные пользователя (структура зависит от вашей модели)",
                        "schema": {
                            "$ref": "#/definitions/backend_internal_model.GetUserInfo"
                        },
                        "headers": {
                            "Set-Cookie": {
                                "type": "string",
                                "description": "access_token=...; HttpOnly"
                            }
                        }
                    },
                    "400": {
                        "description": "error: неверный код или данные",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "error: ошибка генерации токена",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "backend_internal_model.GetUserInfo": {
            "type": "object",
            "properties": {
                "avatarUrl": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "isNewUser": {
                    "type": "boolean"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "backend_internal_model.PhoneRequest": {
            "type": "object",
            "properties": {
                "phone": {
                    "type": "string"
                }
            }
        },
        "backend_internal_model.RegisterUser": {
            "type": "object",
            "properties": {
                "bio": {
                    "type": "string"
                },
                "birthDate": {
                    "type": "string"
                },
                "carBrand": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        },
        "backend_internal_model.VerifyOtp": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "CookieAuth": {
            "description": "Для тестирования введите в поле: access_token=ваш_токен_тут",
            "type": "apiKey",
            "name": "Cookie",
            "in": "header"
        }
    }
}